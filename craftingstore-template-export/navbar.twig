<nav class="navbar">
    <a href="{{ path('index') }}" class="nav-link {% if app.request.get('_route') == 'index' %}active{% endif %}">
        <i class="fas fa-home"></i> Home
    </a>

    {% for category in categories %}
        <a href="{{ path('category', {slug: category.slug}) }}" class="nav-link {% if app.request.get('slug') == category.slug %}active{% endif %}">
            {% if category.icon %}<i class="{{ category.icon }}"></i>{% endif %}
            {{ category.name }}
        </a>
    {% endfor %}

    {% for page in pages %}
        <a href="{{ path('page', {slug: page.slug}) }}" class="nav-link {% if app.request.get('slug') == page.slug %}active{% endif %}">
            {{ page.name }}
        </a>
    {% endfor %}

    {% if basket.items|length > 0 %}
        <a href="{{ path('basket') }}" class="nav-link">
            <i class="fas fa-shopping-cart"></i>
            Basket ({{ basket.items|length }})
        </a>
    {% endif %}

    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <a href="{{ path('logout') }}" class="nav-link">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    {% else %}
        <a href="{{ path('login') }}" class="nav-link">
            <i class="fas fa-sign-in-alt"></i> Login
        </a>
    {% endif %}
</nav>
