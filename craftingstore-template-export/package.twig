{% extends 'base.twig' %}

{% block title %}{{ package.name }} - {{ store.name }}{% endblock %}

{% block meta_description %}{{ package.description|striptags|slice(0, 160) }}{% endblock %}

{% block content %}
<div class="py-4">
    <div class="card">
        <div class="d-flex gap-2" style="flex-wrap: wrap;">
            <!-- Package Image -->
            {% if package.image %}
            <div style="flex: 0 0 300px;">
                <img src="{{ package.image }}" alt="{{ package.name }}" style="width: 100%; border-radius: var(--border-radius); border: 2px solid var(--color-gold);">
            </div>
            {% endif %}

            <!-- Package Details -->
            <div style="flex: 1; min-width: 280px;">
                <h1 class="card-title">{{ package.name }}</h1>

                <div class="package-price mb-3">
                    {% if package.salePrice %}
                    <span class="package-price-old">{{ package.price|format_currency(store.currency) }}</span>
                    {{ package.salePrice|format_currency(store.currency) }}
                    {% else %}
                    {{ package.price|format_currency(store.currency) }}
                    {% endif %}
                </div>

                <div class="text-muted mb-3">
                    {{ package.description|raw }}
                </div>

                <!-- Add to Basket Form -->
                <form method="post" action="{{ path('basket_add', {id: package.id}) }}">
                    {% if package.variables|length > 0 %}
                    {% for variable in package.variables %}
                    <div class="form-group">
                        <label for="var_{{ variable.id }}" class="form-label">{{ variable.name }}</label>
                        {% if variable.type == 'text' %}
                        <input type="text" id="var_{{ variable.id }}" name="variables[{{ variable.id }}]" class="form-control" {% if variable.required %}required{% endif %}>
                        {% elseif variable.type == 'select' %}
                        <select id="var_{{ variable.id }}" name="variables[{{ variable.id }}]" class="form-control" {% if variable.required %}required{% endif %}>
                            {% for option in variable.options %}
                            <option value="{{ option }}">{{ option }}</option>
                            {% endfor %}
                        </select>
                        {% endif %}
                    </div>
                    {% endfor %}
                    {% endif %}

                    <div class="form-group">
                        <label for="quantity" class="form-label">Quantity</label>
                        <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" max="{{ package.maxQuantity|default(99) }}" style="max-width: 100px;">
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-cart-plus"></i> Add to Basket
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('category', {slug: package.category.slug}) }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to {{ package.category.name }}
        </a>
    </div>
</div>
{% endblock %}
