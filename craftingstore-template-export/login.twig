{% extends 'base.twig' %}

{% block title %}Login - {{ store.name }}{% endblock %}

{% block content %}
<div class="login-container">
    <div class="login-card">
        <h1 class="login-title card-title">Login</h1>

        {% if error %}
        <div class="alert alert-danger">
            {{ error }}
        </div>
        {% endif %}

        <p class="text-center text-muted mb-3">
            Enter your Minecraft username to continue
        </p>

        <form method="post" action="{{ path('login') }}">
            <div class="form-group">
                <label for="username" class="form-label">Minecraft Username</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Enter your username" required autofocus>
            </div>

            {% if store.enableCaptcha %}
            <div class="form-group">
                <!-- Captcha would go here -->
            </div>
            {% endif %}

            <button type="submit" class="btn btn-primary" style="width: 100%;">
                <i class="fas fa-sign-in-alt"></i> Login
            </button>
        </form>

        <div class="text-center mt-3">
            <a href="{{ path('index') }}" class="text-muted">
                <i class="fas fa-arrow-left"></i> Back to Store
            </a>
        </div>
    </div>
</div>
{% endblock %}
