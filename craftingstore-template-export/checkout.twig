{% extends 'base.twig' %}

{% block title %}Checkout - {{ store.name }}{% endblock %}

{% block content %}
<div class="py-4">
    <h1 class="card-title mb-4">Checkout</h1>

    {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i>
        Please <a href="{{ path('login') }}">login</a> before proceeding with checkout.
    </div>
    {% else %}

    <div class="checkout-grid">
        <!-- Checkout Form -->
        <div>
            <form method="post" action="{{ path('checkout_process') }}">
                <!-- User Info -->
                <div class="card mb-4">
                    <h3 class="card-title">Account Information</h3>
                    <div class="d-flex align-center gap-2">
                        <img src="https://mc-heads.net/avatar/{{ user.username }}/50" alt="{{ user.username }}" style="border-radius: var(--border-radius); border: 2px solid var(--color-gold);">
                        <div>
                            <div class="text-light" style="font-weight: 600;">{{ user.username }}</div>
                            <div class="text-muted">Minecraft Account</div>
                        </div>
                    </div>
                </div>

                <!-- Email (if required) -->
                {% if store.requireEmail %}
                <div class="card mb-4">
                    <h3 class="card-title">Contact Information</h3>
                    <div class="form-group mb-0">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="your@email.com" required>
                        <small class="text-muted">Receipt will be sent to this email.</small>
                    </div>
                </div>
                {% endif %}

                <!-- Payment Methods -->
                <div class="card mb-4">
                    <h3 class="card-title">Payment Method</h3>
                    {% include 'modules/payments.twig' %}
                </div>

                <!-- Terms -->
                <div class="card mb-4">
                    <div class="form-group mb-0">
                        <label style="display: flex; align-items: center; gap: 10px; cursor: pointer;">
                            <input type="checkbox" name="terms" required style="width: 20px; height: 20px;">
                            <span>I agree to the <a href="{{ path('page', {slug: 'terms'}) }}" target="_blank">Terms of Service</a></span>
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-purple" style="width: 100%;">
                    <i class="fas fa-lock"></i> Complete Purchase
                </button>
            </form>
        </div>

        <!-- Order Summary -->
        <div>
            <div class="card checkout-summary">
                <h3 class="card-title">Order Summary</h3>

                {% for item in basket.items %}
                <div class="d-flex justify-between mb-2">
                    <span class="text-muted">{{ item.package.name }} x{{ item.quantity }}</span>
                    <span>
                        {% if item.package.salePrice %}
                        {{ (item.package.salePrice * item.quantity)|format_currency(store.currency) }}
                        {% else %}
                        {{ (item.package.price * item.quantity)|format_currency(store.currency) }}
                        {% endif %}
                    </span>
                </div>
                {% endfor %}

                {% if basket.coupon %}
                <div class="d-flex justify-between mb-2" style="color: var(--color-success);">
                    <span>Coupon: {{ basket.coupon.code }}</span>
                    <span>-{{ basket.discount|format_currency(store.currency) }}</span>
                </div>
                {% endif %}

                <div class="footer__divider"></div>

                <div class="d-flex justify-between" style="font-size: 1.25rem; font-weight: 700;">
                    <span class="text-gold">Total</span>
                    <span class="text-gold">{{ basket.total|format_currency(store.currency) }}</span>
                </div>
            </div>
        </div>
    </div>

    {% endif %}
</div>
{% endblock %}
