{% extends 'base.twig' %}

{% block title %}{{ category.name }} - {{ store.name }}{% endblock %}

{% block meta_description %}{{ category.description|striptags|slice(0, 160) }}{% endblock %}

{% block content %}
<div class="py-4">
    <!-- Category Header -->
    <div class="card mb-4">
        <h1 class="card-title">{{ category.name }}</h1>
        {% if category.description %}
        <p class="text-muted">{{ category.description|raw }}</p>
        {% endif %}
    </div>

    <!-- Subcategories -->
    {% if subcategories|length > 0 %}
    <h2 class="mb-3">Subcategories</h2>
    <div class="category-grid mb-4">
        {% for subcategory in subcategories %}
        <a href="{{ path('category', {slug: subcategory.slug}) }}" class="category-card">
            {% if subcategory.icon %}
            <div class="category-icon">
                <i class="{{ subcategory.icon }}"></i>
            </div>
            {% endif %}
            <div class="category-name">{{ subcategory.name }}</div>
        </a>
        {% endfor %}
    </div>
    {% endif %}

    <!-- Packages -->
    {% if packages|length > 0 %}
    <h2 class="mb-3">Packages</h2>
    <div class="package-grid">
        {% for package in packages %}
        <a href="{{ path('package', {slug: package.slug}) }}" class="package-card">
            {% if package.image %}
            <img src="{{ package.image }}" alt="{{ package.name }}" class="package-image">
            {% endif %}
            <div class="package-content">
                <h3 class="package-title">{{ package.name }}</h3>
                <p class="package-description">{{ package.description|striptags|slice(0, 100) }}{% if package.description|length > 100 %}...{% endif %}</p>
                <div class="package-price">
                    {% if package.salePrice %}
                    <span class="package-price-old">{{ package.price|format_currency(store.currency) }}</span>
                    {{ package.salePrice|format_currency(store.currency) }}
                    {% else %}
                    {{ package.price|format_currency(store.currency) }}
                    {% endif %}
                </div>
            </div>
        </a>
        {% endfor %}
    </div>
    {% else %}
    <div class="card text-center">
        <p class="text-muted">No packages available in this category.</p>
        <a href="{{ path('index') }}" class="btn btn-secondary mt-2">
            <i class="fas fa-arrow-left"></i> Back to Store
        </a>
    </div>
    {% endif %}
</div>
{% endblock %}
