{% extends 'base.twig' %}

{% block title %}Payment Failed - {{ store.name }}{% endblock %}

{% block content %}
<div class="status-page">
    <div class="status-icon failed">
        <i class="fas fa-times-circle"></i>
    </div>

    <h1 class="status-title" style="color: var(--color-error);">Payment Failed</h1>

    <p class="status-message">
        Unfortunately, your payment could not be processed.
        {% if error %}
        <br><br>
        <strong>Error:</strong> {{ error }}
        {% endif %}
    </p>

    <div class="mt-4 d-flex gap-2 justify-center" style="flex-wrap: wrap; justify-content: center;">
        <a href="{{ path('basket') }}" class="btn btn-primary">
            <i class="fas fa-redo"></i> Try Again
        </a>
        <a href="{{ path('index') }}" class="btn btn-secondary">
            <i class="fas fa-home"></i> Return to Store
        </a>
    </div>

    <div class="mt-4">
        <p class="text-muted">
            If you continue to experience issues, please contact support.
        </p>
    </div>
</div>
{% endblock %}
