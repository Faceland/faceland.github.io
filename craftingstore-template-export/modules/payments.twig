<div class="payment-methods">
    {% for gateway in paymentGateways %}
    <label class="payment-method">
        <input type="radio" name="gateway" value="{{ gateway.id }}" {% if loop.first %}checked{% endif %} style="display: none;">
        {% if gateway.image %}
        <img src="{{ gateway.image }}" alt="{{ gateway.name }}">
        {% else %}
        <span>{{ gateway.name }}</span>
        {% endif %}
    </label>
    {% endfor %}
</div>

<script>
document.querySelectorAll('.payment-method').forEach(function(method) {
    method.addEventListener('click', function() {
        document.querySelectorAll('.payment-method').forEach(function(m) {
            m.classList.remove('selected');
        });
        this.classList.add('selected');
    });

    if (method.querySelector('input').checked) {
        method.classList.add('selected');
    }
});
</script>
