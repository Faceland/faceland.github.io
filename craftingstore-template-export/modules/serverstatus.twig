<div class="module">
    <h3 class="module-title">
        <i class="fas fa-server"></i> Server Status
    </h3>

    <div class="server-status">
        <div class="server-status-indicator {% if module.online %}online{% else %}offline{% endif %}"></div>
        <span class="server-status-text">
            {% if module.online %}
            <span style="color: var(--color-success);">Online</span>
            {% else %}
            <span style="color: var(--color-error);">Offline</span>
            {% endif %}
        </span>
        {% if module.online and module.players is defined %}
        <span class="server-status-players">
            <i class="fas fa-users"></i> {{ module.players.online }}/{{ module.players.max }}
        </span>
        {% endif %}
    </div>

    {% if module.ip %}
    <div class="mt-2">
        <code style="background: rgba(0,0,0,0.3); padding: 5px 10px; border-radius: var(--border-radius); color: var(--color-gold);">
            {{ module.ip }}
        </code>
    </div>
    {% endif %}
</div>
