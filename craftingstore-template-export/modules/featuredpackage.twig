<div class="module">
    <h3 class="module-title">
        <i class="fas fa-star"></i> Featured
    </h3>

    {% if module.package %}
    <div class="featured-package">
        {% if module.package.image %}
        <img src="{{ module.package.image }}" alt="{{ module.package.name }}" class="featured-package-image">
        {% endif %}

        <div class="featured-package-title">{{ module.package.name }}</div>

        <div class="featured-package-price">
            {% if module.package.salePrice %}
            <span class="package-price-old">{{ module.package.price|format_currency(store.currency) }}</span>
            {{ module.package.salePrice|format_currency(store.currency) }}
            {% else %}
            {{ module.package.price|format_currency(store.currency) }}
            {% endif %}
        </div>

        <a href="{{ path('package', {slug: module.package.slug}) }}" class="btn btn-primary">
            <i class="fas fa-shopping-cart"></i> View Package
        </a>
    </div>
    {% else %}
    <p class="text-muted">No featured package set.</p>
    {% endif %}
</div>
