<div class="module">
    <h3 class="module-title">
        <i class="fas fa-bullseye"></i> {{ module.title|default('Donation Goal') }}
    </h3>

    {% set percentage = (module.current / module.goal * 100)|round %}
    {% if percentage > 100 %}{% set percentage = 100 %}{% endif %}

    <div class="donation-goal-bar">
        <div class="donation-goal-progress" style="width: {{ percentage }}%;">
            {% if percentage > 10 %}{{ percentage }}%{% endif %}
        </div>
    </div>

    <div class="donation-goal-text">
        <span>{{ module.current|format_currency(store.currency) }}</span>
        <span>{{ module.goal|format_currency(store.currency) }}</span>
    </div>

    {% if module.description %}
    <p class="text-muted mt-2" style="font-size: 0.9rem;">{{ module.description }}</p>
    {% endif %}
</div>
