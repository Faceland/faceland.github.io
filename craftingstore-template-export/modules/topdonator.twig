<div class="module">
    <h3 class="module-title">
        <i class="fas fa-trophy"></i> Top Donator
    </h3>

    {% if module.topDonator %}
    <div class="top-donator">
        <img src="https://mc-heads.net/avatar/{{ module.topDonator.username }}/60" alt="{{ module.topDonator.username }}" class="top-donator-avatar">
        <div>
            <div class="top-donator-name">{{ module.topDonator.username }}</div>
            <div class="top-donator-amount">{{ module.topDonator.amount|format_currency(store.currency) }}</div>
        </div>
    </div>
    {% else %}
    <p class="text-muted">No donations yet this month. Be the first!</p>
    {% endif %}
</div>
